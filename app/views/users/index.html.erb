<div>
  <div>
    <h1>
      List of all users
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new user
    </h2>

    <form action="/insert_user" method="post">
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="username_box">
          Username
        </label>

        <textarea id="username_box" name="query_username" rows="3"></textarea>
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email">
      </div>

      <div>
        <label for="role_box">
          Role
        </label>

        <input type="text" id="role_box" name="query_role">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <textarea id="bio_box" name="query_bio" rows="3"></textarea>
      </div>

      <div>
        <label for="website_link_box">
          Website link
        </label>

        <input type="text" id="website_link_box" name="query_website_link">
      </div>

      <div>
        <label for="prof_picture_url_box">
          Prof picture url
        </label>

        <input type="text" id="prof_picture_url_box" name="query_prof_picture_url">
      </div>

      <div>
        <label for="backg_picture_url_box">
          Backg picture url
        </label>

        <input type="text" id="backg_picture_url_box" name="query_backg_picture_url">
      </div>

      <div>
        <label for="linked_in_url_box">
          Linked in url
        </label>

        <input type="text" id="linked_in_url_box" name="query_linked_in_url">
      </div>

      <div>
        <label for="insta_url_box">
          Insta url
        </label>

        <input type="text" id="insta_url_box" name="query_insta_url">
      </div>

      <div>
        <label for="faceb_url_box">
          Faceb url
        </label>

        <input type="text" id="faceb_url_box" name="query_faceb_url">
      </div>

      <div>
        <label for="x_url_box">
          X url
        </label>

        <input type="text" id="x_url_box" name="query_x_url">
      </div>

      <div>
        <input type="checkbox" id="privacy_status_box" name="query_privacy_status" value="1">

        <label for="privacy_status_box">Privacy status</label>
      </div>

      <div>
        <label for="hierarchy_id_box">
          Hierarchy
        </label>

        <input type="text" id="hierarchy_id_box" name="query_hierarchy_id">
      </div>

      <div>
        <label for="branch_id_box">
          Branch
        </label>

        <input type="text" id="branch_id_box" name="query_branch_id">
      </div>

      <div>
        <label for="country_em_box">
          Country em
        </label>

        <input type="text" id="country_em_box" name="query_country_em">
      </div>

      <div>
        <label for="city_name_box">
          City name
        </label>

        <input type="text" id="city_name_box" name="query_city_name">
      </div>

      <button>
        Create user
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Username
        </th>

        <th>
          Email
        </th>

        <th>
          Role
        </th>

        <th>
          Bio
        </th>

        <th>
          Website link
        </th>

        <th>
          Prof picture url
        </th>

        <th>
          Backg picture url
        </th>

        <th>
          Linked in url
        </th>

        <th>
          Insta url
        </th>

        <th>
          Faceb url
        </th>

        <th>
          X url
        </th>

        <th>
          Privacy status
        </th>

        <th>
          Hierarchy
        </th>

        <th>
          Branch
        </th>

        <th>
          Country em
        </th>

        <th>
          City name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.id %>
        </td>

        <td>
          <%= a_user.first_name %>
        </td>

        <td>
          <%= a_user.last_name %>
        </td>

        <td>
          <%= a_user.username %>
        </td>

        <td>
          <%= a_user.email %>
        </td>

        <td>
          <%= a_user.role %>
        </td>

        <td>
          <%= a_user.bio %>
        </td>

        <td>
          <%= a_user.website_link %>
        </td>

        <td>
          <%= a_user.prof_picture_url %>
        </td>

        <td>
          <%= a_user.backg_picture_url %>
        </td>

        <td>
          <%= a_user.linked_in_url %>
        </td>

        <td>
          <%= a_user.insta_url %>
        </td>

        <td>
          <%= a_user.faceb_url %>
        </td>

        <td>
          <%= a_user.x_url %>
        </td>

        <td>
          <%= a_user.privacy_status %>
        </td>

        <td>
          <%= a_user.hierarchy_id %>
        </td>

        <td>
          <%= a_user.branch_id %>
        </td>

        <td>
          <%= a_user.country_em %>
        </td>

        <td>
          <%= a_user.city_name %>
        </td>

        <td>
          <%= time_ago_in_words(a_user.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_user.updated_at) %> ago
        </td>

        <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
