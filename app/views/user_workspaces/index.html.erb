<div>
  <div>
    <h1>
      List of all user workspaces
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new user workspace
    </h2>

    <form action="/insert_user_workspace" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="workspace_id_box">
          Workspace
        </label>

        <input type="text" id="workspace_id_box" name="query_workspace_id">
      </div>

      <div>
        <label for="role_box">
          Role
        </label>

        <input type="text" id="role_box" name="query_role">
      </div>

      <button>
        Create user workspace
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Workspace
        </th>

        <th>
          Role
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_user_workspaces.each do |a_user_workspace| %>
      <tr>
        <td>
          <%= a_user_workspace.id %>
        </td>

        <td>
          <%= a_user_workspace.user_id %>
        </td>

        <td>
          <%= a_user_workspace.workspace_id %>
        </td>

        <td>
          <%= a_user_workspace.role %>
        </td>

        <td>
          <%= time_ago_in_words(a_user_workspace.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_user_workspace.updated_at) %> ago
        </td>

        <td>
          <a href="/user_workspaces/<%= a_user_workspace.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
