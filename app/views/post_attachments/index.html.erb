<div>
  <div>
    <h1>
      List of all post attachments
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new post attachment
    </h2>

    <form action="/insert_post_attachment" method="post">
      <div>
        <label for="post_id_box">
          Post
        </label>

        <input type="text" id="post_id_box" name="query_post_id">
      </div>

      <div>
        <label for="file_url_box">
          File url
        </label>

        <input type="text" id="file_url_box" name="query_file_url">
      </div>

      <div>
        <label for="file_type_box">
          File type
        </label>

        <input type="text" id="file_type_box" name="query_file_type">
      </div>

      <button>
        Create post attachment
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Post
        </th>

        <th>
          File url
        </th>

        <th>
          File type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_post_attachments.each do |a_post_attachment| %>
      <tr>
        <td>
          <%= a_post_attachment.id %>
        </td>

        <td>
          <%= a_post_attachment.post_id %>
        </td>

        <td>
          <%= a_post_attachment.file_url %>
        </td>

        <td>
          <%= a_post_attachment.file_type %>
        </td>

        <td>
          <%= time_ago_in_words(a_post_attachment.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_post_attachment.updated_at) %> ago
        </td>

        <td>
          <a href="/post_attachments/<%= a_post_attachment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
