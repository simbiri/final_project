<div>
  <div>
    <h1>
      List of all follow requests
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new follow request
    </h2>

    <form action="/insert_follow_request" method="post">
      <div>
        <label for="sent_follow_request_box">
          Sent follow request
        </label>

        <input type="text" id="sent_follow_request_box" name="query_sent_follow_request">
      </div>

      <div>
        <label for="received_follow_request_box">
          Received follow request
        </label>

        <input type="text" id="received_follow_request_box" name="query_received_follow_request">
      </div>

      <div>
        <label for="request_status_box">
          Request status
        </label>

        <input type="text" id="request_status_box" name="query_request_status">
      </div>

      <button>
        Create follow request
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sent follow request
        </th>

        <th>
          Received follow request
        </th>

        <th>
          Request status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_follow_requests.each do |a_follow_request| %>
      <tr>
        <td>
          <%= a_follow_request.id %>
        </td>

        <td>
          <%= a_follow_request.sent_follow_request %>
        </td>

        <td>
          <%= a_follow_request.received_follow_request %>
        </td>

        <td>
          <%= a_follow_request.request_status %>
        </td>

        <td>
          <%= time_ago_in_words(a_follow_request.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_follow_request.updated_at) %> ago
        </td>

        <td>
          <a href="/follow_requests/<%= a_follow_request.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
