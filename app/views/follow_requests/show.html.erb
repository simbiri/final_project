<div>
  <div>
    <h1>
      Follow request #<%= @the_follow_request.id %> details
    </h1>

    <div>
      <div>
        <a href="/follow_requests">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_follow_request/<%= @the_follow_request.id %>">
          Delete follow request
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Sent follow request
      </dt>
      <dd>
        <%= @the_follow_request.sent_follow_request %>
      </dd>

      <dt>
        Received follow request
      </dt>
      <dd>
        <%= @the_follow_request.received_follow_request %>
      </dd>

      <dt>
        Request status
      </dt>
      <dd>
        <%= @the_follow_request.request_status %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_follow_request.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_follow_request.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit follow request
    </h2>

    <form action="/modify_follow_request/<%= @the_follow_request.id %>"  method="post" >
      <div>
        <label for="sent_follow_request_box">
          Sent follow request
        </label>

        <input type="text" id="sent_follow_request_box" name="query_sent_follow_request" value="<%= @the_follow_request.sent_follow_request %>">
      </div>

      <div>
        <label for="received_follow_request_box">
          Received follow request
        </label>

        <input type="text" id="received_follow_request_box" name="query_received_follow_request" value="<%= @the_follow_request.received_follow_request %>">
      </div>

      <div>
        <label for="request_status_box">
          Request status
        </label>

        <input type="text" id="request_status_box" name="query_request_status" value="<%= @the_follow_request.request_status %>">
      </div>

      <button>
        Update follow request
      </button>
    </form>
  </div>
</div>

<hr>
